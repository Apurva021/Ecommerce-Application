{
    "database":{
        "uri":"mongodb+srv://rutvik:17bit008@productcatalog.poqge.mongodb.net/ProductCatalog?retryWrites=true&w=majority",
        "name":"ProductCatalog",
        "collection":"product"
    },
    "server":{
        "port":3000
    },
    "searchAggragate":{
        "autocomplete": [
            {
              "$search": {
                "index": "default", 
                "autocomplete": {
                  "query": "grap", 
                  "path": "title", 
                  "tokenOrder": "sequential", 
                  "fuzzy": {
                    "maxEdits": 2, 
                    "prefixLength": 3
                  }
                }
              }
            }, {
              "$limit": 10
            }, {
              "$project": {
                "title": 1, 
                "_id": 0
              }
            }
          ],
        
        "fullTextSearch":[
            {
              "$search": {
                "index": "FullTextSearch", 
                "text": {
                  "query": "grap", 
                  "path": [
                    "title", "shortDescription", "color", "brand", "material", "sellerName", "occasion"
                  ], 
                  "fuzzy": {
                    "maxEdits": 2, 
                    "prefixLength": 3
                  }, 
                  "score": {
                    "boost": {
                      "value": 3
                    }
                  }
                }
              }
            }, {
              "$limit": 50
            }, {
              "$project": {
                "_id": 0, 
                "id": 1, 
                "title": 1, 
                "price": 1, 
                "thumbnail": 1, 
                "avgRating": 1, 
                "score": {
                  "$meta": "searchScore"
                }
              }
            }
          ]
    }
}