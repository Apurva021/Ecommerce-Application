{
    "database":{
        "uri":"mongodb+srv://rutvik:17bit008@productcatalog.poqge.mongodb.net/ProductCatalog?retryWrites=true&w=majority",
        "name":"ProductCatalog",
        "collection":"product"
    },
    "server":{
        "port":3000
    },
    "searchAggragate":{
        "autocomplete": [
            {
              "$search": {
                "index": "autocomplete", 
                "autocomplete": {
                  "query": "grap", 
                  "path": "title", 
                  "tokenOrder": "sequential", 
                  "fuzzy": {
                    "maxEdits": 2, 
                    "prefixLength": 3
                  }
                }
              }
            }, {
              "$limit": 10
            }, {
              "$project": {
                "title": 1, 
                "_id": 0
              }
            }
          ],
        
        "fullTextSearch":[
            {
              "$search": {
                "index": "FullTextSearch", 
                "text": {
                  "query": "grap", 
                  "path": [
                    "title", "shortDescription", "color", "brand", "material", "sellerName", "occasion"
                  ], 
                  "fuzzy": {
                    "maxEdits": 2, 
                    "prefixLength": 3
                  }, 
                  "score": {
                    "boost": {
                      "value": 3
                    }
                  }
                }
              }
            }, {
              "$limit": 50
            }, {
              "$project": {
                "_id": 0, 
                "id": 1, 
                "title": 1, 
                "price": 1, 
                "thumbnail": 1, 
                "avgRating": 1, 
                "score": {
                  "$meta": "searchScore"
                }
              }
            }
          ]
    },
    "eureka":{
      "host":"127.0.0.1",
      "port":8761,
      "hostname":"localhost",
      "ipAddress":"127.0.0.1",
      "enabled":true,
      "dataCenter":{
        "name":"MyOwn"
      },
      "servicePath":"/eureka/apps/",
      "maxRetries":5,
      "requestRetryDelay": 5000
    },
    "application":{
      "name":"ProductCatalog"
    }
}